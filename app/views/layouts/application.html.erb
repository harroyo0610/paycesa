<!DOCTYPE html>
<html>
<head>
  <title>Paycesa</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div >
	<div class="row">
		<%= render 'layouts/side_menu' %>
		<div class="col-sm-10">
			<% flash.each do |message_type, message| %>
				<div class="alert alert-<%= message_type %> offset-sm-2 float-none col-sm-6" id="flash">
					<%= message %>
				</div>
			<% end %>
			<%= yield %>
		</div>
	</div>
</div>
</body>
</html>
<script type="text/javascript">
$(document).ready(function(){
  setTimeout(function(){
    $('#flash').remove();
  }, 3000);
 })
</script>